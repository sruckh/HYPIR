[flake8]
max-line-length = 127
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    .eggs,
    *.egg-info,
    .tox,
    .coverage,
    .pytest_cache,
    .mypy_cache,
    .DS_Store,
    assets,
    results,
    outputs,
    experiments,
    .gradio,
    temp
per-file-ignores =
    __init__.py:F401
    # Ignore some specific files if needed
    predict.py:E501
max-complexity = 10
ignore = 
    E203,  # Whitespace before ':'
    E501,  # Line too long (we have max-line-length)
    W503,  # Line break before binary operator
    F403,  # 'from module import *' used
    F405   # Name may be undefined, or defined from star imports